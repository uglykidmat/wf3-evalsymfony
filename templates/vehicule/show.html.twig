{% extends 'base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %}
    <h1>Véhicule</h1>    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ vehicule.couleur }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>Conduit par</th>
                <td>
                    {% for conducteur in vehicule.relationconducteur %}
                        {{conducteur}}{% if not loop.last %},{% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_index') }}">Retour à la liste</a>
    <br/>
    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}">Modifier</a>
    <br/>
    <br/>

    {{ include('vehicule/_delete_form.html.twig') }}
{% endblock %}
